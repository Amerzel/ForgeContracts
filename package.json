{
  "name": "@forge/contracts",
  "version": "1.0.0",
  "description": "Shared JSON Schema contracts for the ForgeContracts tool pipeline",
  "type": "module",
  "exports": {
    "./schemas/*": "./schemas/*",
    "./fixtures/*": "./fixtures/*",
    "./data/*": "./data/*",
    "./validate": "./src/validate.js",
    "./materials": "./src/materials.js",
    "./types": "./dist/types/index.d.ts"
  },
  "files": [
    "schemas",
    "fixtures",
    "data",
    "src",
    "dist/types",
    "VOCABULARY.md",
    "HANDOFF_MATRIX.md"
  ],
  "scripts": {
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "smoke": "node scripts/smoke.js",
    "generate-types": "node scripts/generate-types.js",
    "prepublishOnly": "npm run generate-types && npm test"
  },
  "keywords": [
    "game-development",
    "json-schema",
    "contracts"
  ],
  "author": "Amerzel",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Amerzel/ForgeContracts.git"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "ajv": "^8.18.0",
    "ajv-formats": "^3.0.1",
    "json-schema-to-typescript": "^15.0.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "ajv": "^8.18.0",
    "ajv-formats": "^3.0.1"
  }
}
