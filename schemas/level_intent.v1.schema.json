{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gamedev-contracts.amerzel.dev/level_intent.v1.schema.json",
  "title": "level_intent.v1",
  "description": "Optional high-level level design intent that can be compiled to semantic_map.v1.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema",
    "mapId",
    "width",
    "height"
  ],
  "properties": {
    "schema": {
      "const": "level_intent.v1"
    },
    "producer": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "tool": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "generatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "tool",
        "version"
      ]
    },
    "mapId": {
      "type": "string",
      "minLength": 1
    },
    "width": {
      "type": "integer",
      "minimum": 1
    },
    "height": {
      "type": "integer",
      "minimum": 1
    },
    "baseTerrain": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_-]*$"
    },
    "regions": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/region"
      }
    },
    "paths": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/path"
      }
    },
    "constraints": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "walkableMinPct": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "requirePathConnectivity": {
          "type": "boolean"
        },
        "allowIslands": {
          "type": "boolean"
        }
      }
    },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "coordSystem": {
          "const": "top-left"
        },
        "tileSize": {
          "type": "integer",
          "minimum": 1
        },
        "author": {
          "type": "string"
        },
        "seed": {
          "type": "integer"
        },
        "extensions": {
          "type": "object",
          "additionalProperties": true
        }
      }
    }
  },
  "$defs": {
    "point": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "x",
        "y"
      ],
      "properties": {
        "x": {
          "type": "integer",
          "minimum": 0
        },
        "y": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "shape": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "rect"
          ]
        },
        "x": {
          "type": "integer",
          "minimum": 0
        },
        "y": {
          "type": "integer",
          "minimum": 0
        },
        "w": {
          "type": "integer",
          "minimum": 1
        },
        "h": {
          "type": "integer",
          "minimum": 1
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "type": {
                "const": "rect"
              }
            }
          },
          "then": {
            "required": [
              "x",
              "y",
              "w",
              "h"
            ]
          }
        }
      ]
    },
    "region": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "terrain",
        "shape"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "terrain": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9_-]*$"
        },
        "shape": {
          "$ref": "#/$defs/shape"
        },
        "priority": {
          "type": "integer"
        }
      }
    },
    "path": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "terrain",
        "from",
        "to",
        "width"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "terrain": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9_-]*$"
        },
        "from": {
          "$ref": "#/$defs/point"
        },
        "to": {
          "$ref": "#/$defs/point"
        },
        "width": {
          "type": "integer",
          "minimum": 1
        }
      }
    }
  }
}
